@model Eventease.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h4>Are you sure you want to delete this booking?</h4>
<hr />
<div>
    <h3>@Model.CustomerName</h3>
    <p><strong>Event:</strong> @Model.Event.Title</p>
    <p><strong>Booking Date:</strong> @Model.BookingDate.ToShortDateString()</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
