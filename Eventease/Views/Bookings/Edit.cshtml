@model Eventease.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="CustomerName" class="control-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventID" class="control-label"></label>
        <select asp-for="EventID" class="form-control" asp-items="@(ViewData["EventID"] as SelectList)"></select>
        <span asp-validation-for="EventID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</form>
